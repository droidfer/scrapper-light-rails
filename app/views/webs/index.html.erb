<p style="color: green"><%= notice %></p>
<p style="color: darkred"><%= alert %></p>

<%= form_with(model: @web) do |form| %>
  <div class="mb-3">
    <%= form.text_field :url, placeholder: "Add new page" %>
    <%= form.submit "Scrape" , class: 'btn btn-secondary'%>
  </div>
<% end %>

<div id="webs">
  
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Total Links</th>
        </tr>
      </thead>
      
      <tbody>
      <% @webs.each do |web| %>
        <tr>
          <td>
            <%= link_to web.display_name, web_path(web) %>
          </td>
          
          <td> <%= web.display_total %></td>
        </tr>
      <% end %>
      </tbody> 
    </table>
    
    <%= paginate @webs%>
</div>


