<p style="color: green"><%= notice %></p>

<h1>Webs</h1>

<%= form_with(model: @web) do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :url %>
  </div>
  
  <div>
    <%= form.submit "Scrape"%>
  </div>
<% end %>

<div id="webs">
  
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Total Links</th>
        </tr>
      </thead>
      
      <tbody>
      <% @webs.each do |web| %>
        <tr>
          <td>
            <%= link_to web.display_name, web_path(web) %>
          </td>
          
          <td> <%= web.display_total %></td>
        </tr>
      <% end %>
      </tbody> 
    </table>
    
    <%= paginate @webs%>
</div>


